<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="spinner">
        <item name="android:spinnerStyle">@style/spinner_style</item>
        <item name="android:shape">rectangle</item>
    </style>
    
    <style name="spinner_style">
        <item name="android:clickable">true</item>
        <item name="android:dropDownWidth">50dp</item>
        <item name="android:dropDownSelector">@android:color/transparent</item>
        <item name="android:dropDownHeight">50dp</item>
    </style>

    <style name="spinner_card">
        <item name="android:clickable">true</item>
        <item name="android:dropDownWidth">100dp</item>
        <item name="android:dropDownSelector">@android:color/transparent</item>
        <item name="android:dropDownHeight">50dp</item>
    </style>

</resources>
